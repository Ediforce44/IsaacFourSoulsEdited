<Defaults>
    <Button/>
    <Button class="colorButton" onClick="colorPicked" />
</Defaults>

<VerticalLayout
    id="colorPicker"
    height="110"
    width="210"
    allowDragging="true"
    returnToOriginalPositionWhenReleased="false"
    rectAlignment="UpperCenter"
    offsetXY="450 -50"
    active="false"
    >
    <Text color="#EEDFD0" id="1" text="Pick Player:" fontSize="25" fontStyle="Bold" alignment="LowerLeft"> </Text>
    <HorizontalLayout
        id="colorButtons"
        height="50"
        width="210"
        rectAlignment="UpperCenter"
        offsetXY="0 30"
        >
        <Button color="#C60A00"  id="Red"  class="colorButton"></Button>
        <Button color="#1C79F8"  id="Blue"  class="colorButton"></Button>
        <Button color="#2BB837"  id="Green"  class="colorButton"></Button>
        <Button color="#D0E431" id="Yellow" class="colorButton"></Button>
    </HorizontalLayout>
</VerticalLayout>